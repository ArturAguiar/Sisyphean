<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/escape"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:text="Escape"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/magic"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/escape"
        android:layout_alignParentLeft="true"
        android:background="@android:color/black"
        android:text="Magic"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/attack"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/magic"
        android:layout_alignParentLeft="true"
        android:background="@android:color/black"
        android:text="Attack"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

    <sofia.graphics.ShapeView
        android:id="@+id/shapeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/attack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/attack"
        android:layout_toRightOf="@+id/escape" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/buttonLayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <sofia.graphics.ShapeView
        android:id="@+id/shapeView2"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_above="@+id/escape"
        android:layout_below="@+id/shapeView"
        android:layout_centerHorizontal="true" />

    <sofia.graphics.ShapeView
        android:id="@+id/hpText"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/magic"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/shapeView"
        android:layout_toRightOf="@+id/shapeView2" />

    <sofia.graphics.ShapeView
        android:id="@+id/mpText"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/escape"
        android:layout_alignLeft="@+id/hpMpText"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/magic" />

</RelativeLayout>
