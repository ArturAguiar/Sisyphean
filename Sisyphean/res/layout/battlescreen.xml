<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/escape"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        android:text="Escape"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/magic"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/escape"
        android:layout_alignParentLeft="true"
        android:background="@android:color/black"
        android:text="Magic"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/attack"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/magic"
        android:layout_alignParentLeft="true"
        android:background="@android:color/black"
        android:text="Attack"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/manaPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/escape"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:text="50/50"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/healthPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/magic"
        android:layout_alignRight="@+id/manaPoints"
        android:text="100/100"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <sofia.graphics.ShapeView
        android:id="@+id/shapeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/attack"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <sofia.graphics.ShapeView
        android:id="@+id/shapeView2"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/manaPoints"
        android:layout_toLeftOf="@+id/healthPoints" />

    <Button
        android:id="@+id/heal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/manaPoints"
        android:layout_alignBottom="@+id/manaPoints"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/escape"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:text="Heal"
        android:visibility="invisible" />

    <Button
        android:id="@+id/damage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/manaPoints"
        android:layout_alignLeft="@+id/heal"
        android:background="@android:color/black"
        android:text="Damage"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:visibility="invisible" />

</RelativeLayout>
