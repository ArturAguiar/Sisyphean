<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/popup"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true" >
            
        <sofia.graphics.ShapeView
                    android:id="@+id/shapeView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4.71" />
       
           

                    <TextView
                            android:id="@+id/currentitem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/shapeView2"
                            android:layout_alignParentLeft="true"
                            android:text=""
                            android:textSize="18dp"
                            android:maxWidth="100dp" />
                    <TextView
                            android:id="@+id/currentname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/currentitem"
                            android:layout_alignLeft="@+id/currentitem"
                            android:text=""
                            android:textSize="15dp"
                            android:maxWidth="100dp" />

                   <TextView
                            android:id="@+id/currentdesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/currentname"
                            android:layout_alignLeft="@+id/currentitem"
                            android:text=""
                            android:textSize="12dp"
                            android:maxWidth="100dp" />

                    
                    <TextView
                            android:id="@+id/currentbuff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/currentdesc"
                            android:layout_alignLeft="@+id/currentitem"
                            android:text=""
                            android:textSize="15dp"
                            android:maxWidth="100dp" />

                    
                    <TextView
                            android:id="@+id/newitem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/shapeView2"
                            android:layout_alignParentRight="true"
                            android:text=""
                            android:textSize="18dp"
                            android:maxWidth="100dp" />
                    
                    <TextView
                            android:id="@+id/newname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/newitem"
                            android:layout_alignLeft="@+id/newitem"
                            android:text=""
                            android:textSize="15dp"
                            android:maxWidth="100dp" />
                    
                        <TextView
                            android:id="@+id/newdesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/newname"
                            android:layout_alignLeft="@+id/newitem"
                            android:text=""
                            android:textSize="10dp"
                            android:maxWidth="100dp" />

                        <TextView
                            android:id="@+id/newbuff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/newdesc"
                            android:layout_alignLeft="@+id/newitem"
                            android:text=""
                            android:textSize="15dp"
                            android:maxWidth="100dp" />
        
    </RelativeLayout>
        
        
        
    <LinearLayout
        android:id="@+id/mainscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
            <RelativeLayout
                android:layout_width="83dp"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/inventory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="Inventory"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/weapon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/inventory"
                    android:layout_below="@+id/inventory"
                    android:text="" />

                <TextView
                    android:id="@+id/armor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/weapon"
                    android:layout_below="@+id/weapon"
                    android:text="" />

                <ImageButton
                    android:id="@+id/healthbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/armor"
                    android:background="@drawable/health_potion" />
            
                <TextView
                    android:id="@+id/healthp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignLeft="@+id/weapon"
                    android:layout_below="@+id/healthbutton"
                    android:text="" />
            
                <ImageButton
                    android:id="@+id/manabutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/healthp"
                    android:background="@drawable/mana_potion" />
            
                <TextView
                    android:id="@+id/manap"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignLeft="@+id/weapon"
                    android:layout_below="@+id/manabutton"
                    android:text="" />
                
            </RelativeLayout>
            
            
            
                <sofia.graphics.ShapeView
                    android:id="@+id/shapeView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4.71" />

                    

            <RelativeLayout
                android:layout_width="83dp"
                android:layout_height="wrap_content" >
                
                <ImageButton
                    android:id="@+id/down"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bottom_button" />

                <ImageButton
                    android:id="@+id/left"
                    android:layout_width="wrap_content"
                    android:layout_height="83dp"
                    android:layout_above="@+id/down"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/left_button" />

                <ImageButton
                    android:id="@+id/right"
                    android:layout_width="wrap_content"
                    android:layout_height="83dp"
                    android:layout_alignBaseline="@+id/left"
                    android:layout_above="@+id/down"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/right_button" />

                <ImageButton
                    android:id="@+id/up"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/left"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/top_button" />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Stats"
                            android:textSize="18dp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/health"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="10dp" />

                    </TableRow>
                    
                    <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/mana"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="10dp" />

                    </TableRow>
                    
                    <TableRow
                        android:id="@+id/tableRow4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="10dp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/strength"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="10dp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/defense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="10dp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/dexterity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="10dp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRow8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/intelligence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="10dp" />
                    
                    </TableRow>

                </TableLayout>
            
            
            </RelativeLayout>
    
    
    </LinearLayout>
    
    

</RelativeLayout>